{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@models": ["../models"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".src/**/*.spec.ts"
  ]
}